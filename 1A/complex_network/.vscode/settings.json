{
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}"
    },
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder};${env:PYTHONPATH}"
    },
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}"
    },
    "mypy-type-checker.interpreter": ["${workspaceFolder}/.venv/bin/python"], 
    "mypy-type-checker.path": ["${workspaceFolder}/.venv/bin/mypy"], 
    "black-formatter.interpreter": ["${workspaceFolder}/.venv/bin/python"],
    "black-formatter.path": ["${workspaceFolder}/.venv/bin/black"],
    "isort.interpreter": ["${workspaceFolder}/.venv/bin/python"],
    "isort.path": ["${workspaceFolder}/.venv/bin/isort"], 
    "editor.formatOnSave": true,
    "mypy-type-checker.args": [
        "--check-untyped-defs",
    ],
    "black-formatter.args": [
        "--line-length=88", 
    ],
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    }, 
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "git.ignoreLimitWarning": true
}